<div class="row">
    <div class="col-4 offset-4">
        <div class="text-center pt-3">
            <h2>Create a new Celebrity</h2>
            <form action="/celebrities" method="POST">
                <div class="form-group">
                    <label for="title">Name of Celebrity</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label for="director">Occupation</label>
                    <input type="text" class="form-control" name="occupation">
                </div>
                <div class="form-group">
                    <label for="image">Catch Phrase</label>
                    <input type="text" class="form-control" name="catchPhrase">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create Celebrity!</button>
                </div>
            </form>
        </div>
    </div>
</div>