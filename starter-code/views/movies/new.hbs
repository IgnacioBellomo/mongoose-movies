<div class="row">
    <div class="col-4 offset-4">
        <div class="text-center pt-3">
            <h2>Create a new Movie</h2>
            <form action="/movies" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title">
                </div>
                <div class="form-group">
                    <label for="director">Genre</label>
                    <input type="text" class="form-control" name="genre">
                </div>
                <div class="form-group">
                    <label for="actors">Actors in Movie</label>
                    <select class="custom-select" name="actors" multiple>
                        <option selected>Open this select menu</option>
                        {{#each celebs}}
                        <option value="{{this._id}}">{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="image">Plot</label>
                    <textarea name="plot" class="form-control" cols="30" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create Movie!</button>
                </div>
            </form>
        </div>
    </div>
</div>