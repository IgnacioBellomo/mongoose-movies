<div class="container-fluid movies">
    <div class="row">
        <div class="col-4 offset-4">
            <div class="pt-3">
                <h2 class="text-center">Edit the Movie</h2>
                <form action="/movies/{{movie._id}}" method="POST">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" name="title" value="{{movie.title}}">
                    </div>
                    <div class="form-group">
                        <label for="director">Genre</label>
                        <input type="text" class="form-control" name="genre" value="{{movie.genre}}">
                    </div>
                    <div class="form-group">
                        <label for="actors">Actors in Movie</label>
                        <select class="custom-select" name="actors" multiple>
                            {{#each celebs}}
                            <option value="{{this._id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                        <small class="form-text text-muted text-left">Hold the ctrl key to select multiple actors</small>
                        <a class="badge badge-primary" href="/celebrities/new"> Create a new actor</a>
                    </div>
                    <div class="form-group">
                        <label for="image">Plot</label>
                        <textarea name="plot" class="form-control" cols="30" rows="8">{{movie.plot}}</textarea>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
